/* --------- app-style layout ---------*/
/*
the basic premise is this: set the top AND bottom and the
height gets figured out automatically same for left and right
*/

/*
apply this class to all elements that participate in the above scheme
for fixed height or width items apply auto to one of its dimensions
*/

.layout {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	-webkit-touch-callout: none;
	-webkit-user-select: none;
	-khtml-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

	-webkit-text-size-adjust: none;
	-ms-text-size-adjust:none;

	-webkit-tap-highlight-color: transparent;
}


body .selectable
	-webkit-touch-callout: text;
	-webkit-user-select: text;
	-khtml-user-select: text;
	-moz-user-select: text;
	-ms-user-select: text;
	user-select: text;

html.ie body .selectable
	-ms-user-select: none !important;
	user-select: none !important;



